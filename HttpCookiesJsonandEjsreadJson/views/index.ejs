  <h2><%= classData.categoryName %></h2> 
  <b>Class data json file </b>
  <tr>
    <ul>

        <% classData.categories.forEach(function(item) { %>
          <li><%= item.categoryDescription %></li>
        <% }); %>

      </ul>
  </tr>

  <br><hr>

